@model AutoHub.Models.User.UActionLogin

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Simple Login Form Example</title>
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Rubik:400,700'>
    <link rel="stylesheet" href="~/Sources/Styles/style.css">

</head>
<body>
    <!-- partial:index.partial.html -->
    <div class="login-form">
        @using (Html.BeginForm("LogIn", "Login", FormMethod.Post, new { @id = "LoginForm" }))
        {
            <h1>Login</h1>
            <div class="content">
                <div class="input-field">
                    @Html.TextBoxFor(e => e.Credential,
                         new
                         {
                             type = "email",
                             placeholder = "Email",
                             autocomplete = "nope"
                         })
                </div>
                <div class="input-field">
                    @Html.TextBoxFor(e => e.Credential,
                    new
                    {
                        type = "password",
                        placeholder = "Password",
                        autocomplete = "new-password"
                    })
                </div>
                <a href="#" class="link">Forgot Your Password?</a>
            </div>
            <div class="action">
                <button>Register</button>
                <button type="submit">Sign In</button>
            </div>

        }
        <form id="myform" action="rec/recieveData" method="post">
        </form>
    </div>
    <!-- partial -->


</body>
</html>

