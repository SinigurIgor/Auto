
@{
    Layout = null;
}
@model AutoHub.Models.User.UserLogin
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div>
        <h1>Login</h1>
        @if (!String.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-danger">@ViewBag.Message</div>
        }
        else
        {
            using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group" style="margin-bottom: 15px;">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    <div style="margin: 15px;">
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", style = "width: 300px; padding: 10px;" } })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div style="margin-bottom: 15px; margin-right: 30px;">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", maxlength = 50, style = "padding: 10px;" } })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary btn-block login">Logare</button>
                    </div>
                </div>
            }
        }
        <br />

        @Html.ActionLink("Register", "Register", "Registration")
        <br />
        <br />
        @Html.ActionLink("Forgot Password", "ForgotPassword")
    </div>
</body>
</html>
